<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:padding="@dimen/material_baseline_grid_2x">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="@style/MaterialTypography.Regular.Title"
        tools:text="search item title"/>

    <TextView
        android:id="@+id/subtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/material_baseline_grid_0.5x"
        android:textAppearance="@style/MaterialTypography.Regular.Subheading"
        tools:text="search item subtitle"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="@dimen/material_baseline_grid_0.5x"
        >
        <TextView
            android:id="@+id/type_info"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textAppearance="@style/MaterialTypography.Regular.Caption"
            tools:text="Movie"
            android:drawableLeft="@drawable/ic_tv_gray_24dp"
            android:drawablePadding="@dimen/material_baseline_grid_0.5x"
            android:gravity="left|center_vertical" />
    </LinearLayout>

</LinearLayout>