<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="cz.josefadamcik.trackontrakt.detail.MediaDetailActivity"
    tools:showIn="@layout/activity_media_detail">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/material_baseline_grid_4x"
        >

        <TextView
            android:id="@+id/txt_tagline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@style/MaterialTypography.Regular.Headline"
            tools:text="movie tagline"
            android:layout_marginBottom="@dimen/material_baseline_grid_2x"
            />

        <TextView
            android:id="@+id/txt_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@style/MaterialTypography.Regular.Body1"
            tools:text="longer text"
            />
    </LinearLayout>

</android.support.v4.widget.NestedScrollView>
