<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="@dimen/material_baseline_grid_7x"
              android:paddingLeft="@dimen/material_baseline_grid_2x"
              android:paddingRight="@dimen/material_baseline_grid_2x"
              android:paddingTop="@dimen/material_baseline_grid_0.5x"
              android:paddingBottom="@dimen/material_baseline_grid_0.5x"
              android:background="?attr/selectableItemBackground"

    >

    <FrameLayout
        android:layout_width="@dimen/material_baseline_grid_7x"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/icon_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerInside"
            android:src="@drawable/ic_label_outline_black_24dp"
            android:layout_gravity="left|center_vertical"
            android:tint="@color/colorAccent"
            android:tintMode="src_in"
            />

    </FrameLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="left|center_vertical"
        >

        <TextView
            android:id="@+id/txt_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Value, value"
            android:textAppearance="@style/MaterialTypography.Dense.Caption"
            android:textColor="@color/textColorPrimary"
            android:ellipsize="end"
            />

        <TextView
            android:id="@+id/txt_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="@dimen/material_baseline_grid_10x"
            android:gravity="top|left"
            android:layout_gravity="top|left"
            android:paddingRight="@dimen/material_baseline_grid_1x"
            android:textAppearance="@style/MaterialTypography.Dense.Caption"
            android:textColor="@color/textColorSecondary"
            tools:text="label"
            />


    </LinearLayout>

</LinearLayout>