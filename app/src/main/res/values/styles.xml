<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>


    <style name="TextAppearance.MediaDetailTitle" parent="TextAppearance.AppCompat.Large">
        <item name="android:textSize">@dimen/textsize_mediadetail_title</item>
    </style>

    <style name="TextAppearance.CollapsingToolbarExpandedInvisibleTitle" parent="TextAppearance.MediaDetailTitle">
        <item name="android:textColor">@color/material_color_white_transparent</item>
    </style>
    <style name="MediaDetailEpisodeTitle">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="MediaDetailEpisodeTitle.Secondary">
        <item name="android:textColor">?android:textColorSecondary</item>
    </style>

    <style name="TextAppearance.MediaDetailYear" parent="TextAppearance.AppCompat">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/material_color_white</item>
    </style>

    <style name="TextAppearance.MediaDetailCertification" parent="TextAppearance.AppCompat">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/material_color_white_70_percent</item>
    </style>

    <style name="ListRowHeaderText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">@dimen/material_baseline_grid_2x</item>
        <item name="android:paddingRight">@dimen/material_baseline_grid_2x</item>
        <item name="android:paddingTop">@dimen/material_baseline_grid_1x</item>
        <item name="android:paddingBottom">@dimen/material_baseline_grid_1x</item>
        <item name="android:textAppearance">@style/MaterialTypography.Regular.Subheading</item>
        <item name="android:textColor">@color/material_typography_secondary_text_color_dark</item>
        <item name="android:gravity">left|start|center_vertical</item>
    </style>


</resources>
